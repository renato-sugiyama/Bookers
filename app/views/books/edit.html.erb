<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |form| %>

  <% if @book.errors.any? %>
    <div class="error_box">
      <h2 class="error_message">ERROR</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
          <%= "error: " + message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <div>
    <h4>Title</h4>
    <%= form.text_field :title %>
  </div>
  <div>
    <h4>Body</h4>
    <%= form.text_area :body %>
  </div>
  </div>
  <div class="action">
    <%= form.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
